#!/bin/sh

trap 'update' 5

net() {
    status_internet
}

ctime() {
    status_clock
}

bat() {
    status_battery
}

vol() {
    status_volume
}

bri() {
    status_brightness
}

screens() {
    status_screenstatus
}

update() {
    xsetroot -name "$(screens) $(bri) $(vol) $(bat) $(ctime) $(net)" &
    wait
}

while :; do
    update
    sleep 10 &
    wait
done
